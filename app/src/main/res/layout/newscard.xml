<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/newscardvw"
        android:layout_margin="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/cardimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_card_img"
                android:src="@drawable/get"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/textHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:gravity="center"
                android:singleLine="true"
                android:text="Where to Get Free Doughnuts and Deals on National Doughnut Day"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorDarkGrey"
                />

            <TextView
                android:id="@+id/textDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:gravity="fill"
                android:text="In honor of National Doughnut Day on Friday, June 1, businesses across the country are offering freebies and deals for all doughnut lovers.\r\n\nAs always, the deals are good at participating locations only and it's recommended you check with your location firstâ€¦"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorGrey"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>